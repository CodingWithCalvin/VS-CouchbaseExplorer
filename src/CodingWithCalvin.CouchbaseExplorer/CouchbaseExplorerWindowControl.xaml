<UserControl x:Class="CodingWithCalvin.CouchbaseExplorer.CouchbaseExplorerWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
             xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:vm="clr-namespace:CodingWithCalvin.CouchbaseExplorer.ViewModels"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="300"
             Name="CouchbaseExplorerControl">

    <UserControl.Resources>
        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Inverse Bool to Visibility Converter -->
        <vm:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />

        <!-- Count to Visibility Converter (shows when count is 0) -->
        <vm:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />

        <!-- Binding Proxy to access ViewModel from ContextMenus (which exist outside the visual tree) -->
        <vm:BindingProxy x:Key="ViewModelProxy" Data="{Binding}" />

        <!-- TreeView Item Style for proper selection binding -->
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}" />
        </Style>

        <!-- Context Menu for Connections root (empty space) -->
        <ContextMenu x:Key="RootContextMenu">
            <MenuItem Header="Add Connection..." Command="{Binding AddConnectionCommand}" />
        </ContextMenu>

        <!-- Context Menu for Disconnected Connection -->
        <ContextMenu x:Key="DisconnectedConnectionContextMenu">
            <MenuItem Header="Connect" Command="{Binding ConnectCommand}" />
            <Separator />
            <MenuItem Header="Edit Connection..." Command="{Binding EditConnectionCommand}" />
            <MenuItem Header="Delete Connection" Command="{Binding DeleteConnectionCommand}" />
        </ContextMenu>

        <!-- Context Menu for Connected Connection -->
        <ContextMenu x:Key="ConnectedConnectionContextMenu">
            <MenuItem Header="Disconnect" Command="{Binding DisconnectCommand}" />
            <MenuItem Header="Refresh" Command="{Binding RefreshCommand}" />
            <Separator />
            <MenuItem Header="Edit Connection..." Command="{Binding EditConnectionCommand}" />
            <MenuItem Header="Delete Connection" Command="{Binding DeleteConnectionCommand}" />
        </ContextMenu>

        <!-- Context Menu for Bucket -->
        <ContextMenu x:Key="BucketContextMenu">
            <MenuItem Header="Refresh" Command="{Binding RefreshCommand}" />
        </ContextMenu>

        <!-- Context Menu for Scope -->
        <ContextMenu x:Key="ScopeContextMenu">
            <MenuItem Header="Refresh" Command="{Binding RefreshCommand}" />
        </ContextMenu>

        <!-- Context Menu for Collection -->
        <ContextMenu x:Key="CollectionContextMenu">
            <MenuItem Header="New Document..." Command="{Binding NewDocumentCommand}" />
            <Separator />
            <MenuItem Header="Refresh" Command="{Binding RefreshCommand}" />
        </ContextMenu>

        <!-- Context Menu for Document -->
        <ContextMenu x:Key="DocumentContextMenu">
            <MenuItem Header="Open" Command="{Binding OpenDocumentCommand}" />
            <Separator />
            <MenuItem Header="Copy Document ID" Command="{Binding CopyDocumentIdCommand}" />
            <Separator />
            <MenuItem Header="Delete" Command="{Binding DeleteDocumentCommand}" />
        </ContextMenu>

        <!-- Data Template for Connection Node -->
        <HierarchicalDataTemplate DataType="{x:Type vm:ConnectionNode}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.DatabaseRunning}"
                                    Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}" />
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.Disconnect}"
                                    Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVisibilityConverter}, FallbackValue=Visible}" />
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- Data Template for Buckets Folder Node -->
        <HierarchicalDataTemplate DataType="{x:Type vm:BucketsFolderNode}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.FolderClosed}" />
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- Data Template for Indexes Folder Node -->
        <HierarchicalDataTemplate DataType="{x:Type vm:IndexesFolderNode}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.FolderClosed}" />
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- Data Template for Bucket Node -->
        <HierarchicalDataTemplate DataType="{x:Type vm:BucketNode}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.Database}" />
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- Data Template for Scope Node -->
        <HierarchicalDataTemplate DataType="{x:Type vm:ScopeNode}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.Namespace}" />
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- Data Template for Collection Node -->
        <HierarchicalDataTemplate DataType="{x:Type vm:CollectionNode}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.Table}" />
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- Data Template for Document Batch Node -->
        <HierarchicalDataTemplate DataType="{x:Type vm:DocumentBatchNode}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.FolderClosed}" />
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- Data Template for Document Node -->
        <DataTemplate DataType="{x:Type vm:DocumentNode}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.Document}" />
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
            </StackPanel>
        </DataTemplate>

        <!-- Data Template for Index Node -->
        <DataTemplate DataType="{x:Type vm:IndexNode}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.SearchMember}" />
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
            </StackPanel>
        </DataTemplate>

        <!-- Data Template for Placeholder Node (Loading...) -->
        <DataTemplate DataType="{x:Type vm:PlaceholderNode}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.StatusRunning}" />
                <TextBlock Text="{Binding Name}" FontStyle="Italic" VerticalAlignment="Center"
                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}" />
            </StackPanel>
        </DataTemplate>

        <!-- Data Template for Load More Node -->
        <DataTemplate DataType="{x:Type vm:LoadMoreNode}">
            <StackPanel Orientation="Horizontal">
                <imaging:CrispImage Width="16" Height="16" Margin="0,0,5,0"
                                    Moniker="{x:Static catalog:KnownMonikers.Download}" />
                <TextBlock Text="{Binding Name}" FontStyle="Italic" TextDecorations="Underline" Cursor="Hand"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.HighlightKey}}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}"
                BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBorderKey}}"
                BorderThickness="0,0,0,1"
                Padding="2"
                theming:ImageThemingUtilities.ImageBackgroundColor="{DynamicResource {x:Static vsshell:VsColors.ToolWindowBackgroundKey}}">
            <Border.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Padding" Value="4" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarHoverKey}}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Border.Resources>
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding AddConnectionCommand}" ToolTip="Add Connection">
                    <imaging:CrispImage Width="16" Height="16" Moniker="{x:Static catalog:KnownMonikers.Add}" />
                </Button>
                <Button Command="{Binding RefreshCommand}" ToolTip="Refresh">
                    <imaging:CrispImage Width="16" Height="16" Moniker="{x:Static catalog:KnownMonikers.Refresh}" />
                </Button>
                <Button Command="{Binding CollapseAllCommand}" ToolTip="Collapse All">
                    <imaging:CrispImage Width="16" Height="16" Moniker="{x:Static catalog:KnownMonikers.CollapseAll}" />
                </Button>
            </StackPanel>
        </Border>

        <!-- Tree View Container with Watermark -->
        <Grid Grid.Row="1" Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}">
            <!-- Watermark Logo -->
            <Image Source="/CodingWithCalvin.CouchbaseExplorer;component/Resources/watermark.png"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Center"
                   Margin="20"
                   Opacity="0.08"
                   Stretch="Uniform"
                   IsHitTestVisible="False" />

            <!-- Tree View -->
            <TreeView x:Name="ExplorerTreeView"
                      ItemsSource="{Binding Connections}"
                      Background="Transparent"
                      BorderThickness="0"
                      ContextMenu="{StaticResource RootContextMenu}"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      theming:ImageThemingUtilities.ImageBackgroundColor="{DynamicResource {x:Static vsshell:VsColors.ToolWindowBackgroundKey}}">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding NodeType}" Value="Connection">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="Connect" Command="{Binding Data.ConnectCommand, Source={StaticResource ViewModelProxy}}" />
                                        <MenuItem Header="Disconnect" Command="{Binding Data.DisconnectCommand, Source={StaticResource ViewModelProxy}}" />
                                        <Separator />
                                        <MenuItem Header="Refresh" Command="{Binding Data.RefreshCommand, Source={StaticResource ViewModelProxy}}" />
                                        <Separator />
                                        <MenuItem Header="Edit Connection..." Command="{Binding Data.EditConnectionCommand, Source={StaticResource ViewModelProxy}}" />
                                        <MenuItem Header="Delete Connection" Command="{Binding Data.DeleteConnectionCommand, Source={StaticResource ViewModelProxy}}" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding NodeType}" Value="Bucket">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="Refresh" Command="{Binding Data.RefreshCommand, Source={StaticResource ViewModelProxy}}" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding NodeType}" Value="Scope">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="Refresh" Command="{Binding Data.RefreshCommand, Source={StaticResource ViewModelProxy}}" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding NodeType}" Value="Collection">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="New Document..." Command="{Binding Data.NewDocumentCommand, Source={StaticResource ViewModelProxy}}" />
                                        <Separator />
                                        <MenuItem Header="Refresh" Command="{Binding Data.RefreshCommand, Source={StaticResource ViewModelProxy}}" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding NodeType}" Value="Document">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="Open" Command="{Binding Data.OpenDocumentCommand, Source={StaticResource ViewModelProxy}}" />
                                        <Separator />
                                        <MenuItem Header="Copy Document ID" Command="{Binding Data.CopyDocumentIdCommand, Source={StaticResource ViewModelProxy}}" />
                                        <Separator />
                                        <MenuItem Header="Delete" Command="{Binding Data.DeleteDocumentCommand, Source={StaticResource ViewModelProxy}}" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>
            </TreeView>

            <!-- Empty State -->
            <TextBlock Text="Right-click to add a connection"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontStyle="Italic"
                       Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}"
                       Visibility="{Binding Connections.Count, Converter={StaticResource CountToVisibilityConverter}, FallbackValue=Visible}"
                       IsHitTestVisible="False" />
        </Grid>
    </Grid>
</UserControl>
